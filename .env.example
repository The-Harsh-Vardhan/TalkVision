# Environment Configuration Template
# Copy this file to .env and modify the values as needed
# Note: .env file should not be committed to git (it's in .gitignore)

# Whisper Model Configuration
# Options: tiny, base, small, medium, large
# tiny = fastest, least accurate
# base = balanced (recommended)
# large = slowest, most accurate
WHISPER_MODEL=base

# File Upload Limits
MAX_FILE_SIZE=26214400  # 25MB in bytes
ALLOWED_EXTENSIONS=wav,mp3,m4a,flac,ogg

# API Configuration
API_TITLE="TalkVision API"
API_DESCRIPTION="Real-time speech-to-text for hearing-impaired"
API_VERSION="1.0.0"

# Logging Configuration
LOG_LEVEL=info  # debug, info, warning, error, critical

# CORS Settings (for web frontend integration)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Performance Settings
WHISPER_DEVICE=cpu  # cpu or cuda (if GPU available)
ENABLE_LANGUAGE_DETECTION=true

# Development Settings
RELOAD_ON_CHANGE=true
DEBUG_MODE=false
